<div class="user-profile">
  <div class="profile row">
    <div class="col-md-4 avatar">
      <div class="wrapper">
        <%= image_tag 'img3'%>

      </div>
    </div>

    <div class="col-md-8 basic-info">
      <div class="user-wrapper">
        <h2 class="username"><%= current_user.username %></h2>
        <a class="edit-profile" href="<%= edit_user_path(current_user) %>">
          <button>Edit Profile</button>
        </a>
      </div>
      <ul class="posts">
        <li><span>10</span> posts</li>
        <li><span>12</span> followers</li>
        <li><span>45</span> following</li>
      </ul>
      <h2 class="name"><%= current_user.username %></h2>
       <%=link_to current_user.website, current_user.website, class:  'website' %>
    </div>
  </div>
</div>
<!-- bottom posts-------- -->
<div class="user-tabs">
  <a class="tab active" href="">
    <i class="fa fa-th"></i>
    POSTS
  </a>
    <a class="tab" href="">
    <i class="fa fa-bookmark"></i>
    SAVED
  </a>
  <a class="tab" href="">
    <i class="fa fa-tag"></i>
    TAGGED
  </a>
</div>


<!-- image section  -->
<div class="user-images">
  <div class="wrapper">
    <%= image_tag 'img2'%>
  </div>
  <div class="wrapper">
    <%= image_tag 'img5'%>

  </div>
  <div class="wrapper">
    <%= image_tag 'img4'%>

  </div>
</div>
